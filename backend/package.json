{
  "name": "backend",
  "version": "1.0.0",
  "description": "A football simulation/management game.",
  "main": "server.ts",
  "scripts": {
    "dev": "node --env-file=.env --import=tsx --watch ./src/index.ts",
    "image": "node --env-file=.env --import=tsx ./scripts/set-logo-images.ts",
    "migration": "node --env-file=.env --import=tsx ./scripts/run-migrations.ts"
  },
  "keywords": [
    "Server-Side",
    "Backend",
    "Node",
    "Typescript",
    "SQLite",
    "Fastify"
  ],
  "author": "Victor Vasconcelos",
  "license": "MIT",
  "packageManager": "pnpm@10.6.5",
  "devDependencies": {
    "@faker-js/faker": "^9.6.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.13.10",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.0",
    "better-sqlite3": "^11.9.0",
    "fastify": "^5.2.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "transliteration": "^2.3.5"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild"
    ],
    "ignoredBuiltDependencies": [
      "better-sqlite3"
    ]
